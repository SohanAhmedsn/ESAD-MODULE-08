<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="~/libs/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/libs/bootstrap/js/bootstrap.bundle.js"></script>
    <link href="~/libs/picker/css/bootstrap-datepicker.standalone.css" rel="stylesheet" />
   
    <style>
        body{
            padding-top:70px;
        }
    </style>
    @await RenderSectionAsync("styles", false)
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light navbar-expand-md fixed-top shadow-sm">
        <div class="container">
            <span class="navbar-brand" >Evidence <sup>08</sup></span>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto">
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                   </li>
                   <li class="nav-item">
                       <a class="nav-link" asp-controller="Devices" asp-action="Index">Devices</a>
                   </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="~/libs/jquery/jquery.js"></script>

    @await RenderSectionAsync("scripts", false)
</body>
</html>
